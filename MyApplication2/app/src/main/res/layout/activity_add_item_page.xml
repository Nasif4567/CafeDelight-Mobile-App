<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="wrap_content">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageViewCoffee"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_image_24"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button"
        android:text="Choose Image"
        app:layout_constraintTop_toBottomOf="@id/imageViewCoffee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editTextCoffeeName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext"
        android:hint="Coffee Name"
        app:layout_constraintTop_toBottomOf="@id/btnChooseImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editTextCoffeeDescription"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edittext"
        android:layout_marginTop="8dp"
        android:hint="Coffee Description"
        app:layout_constraintTop_toBottomOf="@id/editTextCoffeeName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editTextCoffeePrice"
        android:layout_width="0dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edittext"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:hint="Coffee Price"
        app:layout_constraintTop_toBottomOf="@id/editTextCoffeeDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Spinner
        android:id="@+id/spinnerCoffeeCategory"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editTextCoffeePrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




    <Button
        android:id="@+id/btneditCoffee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginTop="16dp"
        android:text="Add Coffee"
        app:layout_constraintTop_toBottomOf="@id/spinnerCoffeeCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>