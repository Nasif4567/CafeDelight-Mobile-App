<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item android:top="1dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#F2F2F2" /> <!-- Set the border color (black) -->
        </shape>
    </item>

    <!-- Background -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="#F2F2F2" /> <!-- Set the background color -->
        </shape>
    </item>
</layer-list>
